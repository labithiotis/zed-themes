{
  "name": "zed-themes",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "sideEffects": false,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "build": "remix vite:build",
    "build:types": "wrangler types",
    "build:validator": "npx -f tsx ./dev/buildValidator.ts",
    "build:schema": "pnpm json2ts ./dev/themeFamily.json ./app/themeFamily.d.ts --unknownAny=false --style.singleQuote --additionalProperties=false",
    "dev": "remix vite:dev",
    "dev:wrangler": "wrangler pages dev ./build/client",
    "db:seed": "pnpm db:migrate:local && npx tsx ./dev/dbSeed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 migrations apply zed_themes --local",
    "db:migrate:prod": "wrangler d1 migrations apply zed_themes --remote",
    "db:migrate:preview": "wrangler d1 migrations apply --env preview zed_themes_preview --remote",
    "db:studio:local": "drizzle-kit studio",
    "db:studio:preview": "export $(xargs < .env.drizzle) && DB_ID=d302f4f5-e52a-4192-869d-8bd7a746135f drizzle-kit studio",
    "db:studio:prod": "export $(xargs < .env.drizzle) && DB_ID=28315368-145a-4500-a29a-5e5e3afb344b drizzle-kit studio",
    "logs:prod": " wrangler pages deployment tail --project-name zed-themes --environment production",
    "logs:preview": " wrangler pages deployment tail --project-name zed-themes --environment preview",
    "fmt": "biome format --write",
    "test": "vitest ./app",
    "test:lint": "biome check",
    "test:tsc": "tsc",
    "test:e2e": "pnpm exec playwright test",
    "test:e2e:dev": "pnpm exec playwright open",
    "sync:themes": "npx tsx ./dev/syncZedThemes.ts",
    "sync:themes:local": "npx tsx ./dev/syncZedThemes.ts --local",
    "ui": "pnpm dlx shadcn-ui@latest"
  },
  "dependencies": {
    "@clerk/remix": "^4.2.45",
    "@clerk/themes": "^2.1.40",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.2",
    "@radix-ui/react-toggle": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.3",
    "@remix-run/cloudflare": "^2.13.1",
    "@remix-run/cloudflare-pages": "^2.13.1",
    "@remix-run/react": "^2.13.1",
    "@sentry/cloudflare": "^8.36.0",
    "@sentry/remix": "^8.36.0",
    "@sentry/vite-plugin": "^2.22.6",
    "@uploadthing/react": "^7.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.36.0",
    "embla-carousel-react": "^8.3.1",
    "image-resize": "^1.4.1",
    "immutability-helper": "^3.1.1",
    "isbot": "^5.1.17",
    "json5": "^2.2.3",
    "lucide-react": "^0.454.0",
    "nanoid": "^5.0.8",
    "react": "rc",
    "react-colorful": "^5.6.1",
    "react-dom": "rc",
    "react-file-drop": "^3.1.6",
    "react-icons": "^5.3.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "tiny-invariant": "^1.3.3",
    "uploadthing": "^7.2.0",
    "zod": "^3.23.8",
    "zundo": "^2.2.0",
    "zustand": "5.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20241022.0",
    "@playwright/test": "^1.48.2",
    "@remix-run/dev": "^2.13.1",
    "@remix-run/node": "^2.13.1",
    "@types/node": "^22.8.7",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.20",
    "better-sqlite3": "^11.5.0",
    "cloudflare-workers-kv-viewer": "^1.0.3",
    "drizzle-kit": "^0.27.1",
    "esbuild": "^0.25.0",
    "json-schema-to-typescript": "^15.0.2",
    "lefthook": "^1.8.2",
    "miniflare": "^3.20241022.0",
    "postcss": "^8.4.47",
    "tailwind-scrollbar-hide": "^1.1.7",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.4",
    "wrangler": "*",
    "zx": "^8.2.0"
  },
  "overrides": {
    "react": "rc",
    "react-dom": "rc"
  },
  "engines": {
    "node": ">=20.11.0"
  }
}
